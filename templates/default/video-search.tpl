	<script>
		{/literal}
		{if !empty($results)}{literal}
        document.addEventListener('DOMContentLoaded',function(){
            console.log( "ready!" );
            getVideoHtml( {/literal} '{$results[0].uniq_id}'{literal});
		},false);{/literal}
        {/if}
		{literal}
	function getVideoHtml(videoId) {
	    console.log(videoId);
	    console.log("OK");
	    $.ajax({
			url:"{/literal}{$smarty.const._URL2}{literal}/ajax.php?p=search&do=getVideoHtml&videoId="+videoId,
			type:"get",
			success:function (response) {
				$("#myVideoPlayer").replaceWith(response);
            }
        })
		
    }	
	</script>
	
